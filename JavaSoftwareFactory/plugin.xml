<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="SampleCategory"
            id="JSoftwareFactory.commands.category">
      </category>
      <command
            name="JSoftwareFactory"
            categoryId="JSoftwareFactory.commands.category"
            id="JSoftwareFactory.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="JSoftwareFactory.commands.sampleCommand"
            class="com.hexaware.jsoftwarefactory.plugin.handlers.ToolBarHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="JSoftwareFactory.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="JSoftwareFactory.wizard.category"
            name="HexJava Software Factory">
      </category>
      
      <wizard
            class="com.hexaware.jsoftwarefactory.plugin.wizards.CustomProjectNewWizard"
            name="Create New HexJava Software Factory Project"
            icon="icons/hex.png"
            category="JSoftwareFactory.wizard.category"
            id="JSoftwareFactory.wizard.new.custom"
            project="true">         
     </wizard>
   </extension>
   
   
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Java Software factory"
               mnemonic="M"
               id="JSoftwareFactory.menus.sampleMenu">
            <command
                  commandId="JSoftwareFactory.commands.sampleCommand"
                  id="JSoftwareFactory.menus.sampleCommand"
                  label="Create Application"
                  mnemonic="S"
                  tooltip="Launch Project Creation Wizard">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="JSoftwareFactory.toolbars.sampleToolbar">
            <command
                  commandId="JSoftwareFactory.commands.sampleCommand"
                  icon="icons/hex.png"
                  id="JSoftwareFactory.toolbars.sampleCommand"
                  style="push"
                  tooltip="Launch Project Creation Wizard">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.resources.natures"
         id="mynature"
         name="MyNature">
         <runtime>
         <run class="com.hexaware.jsoftwarefactory.natures.MyNature">
         </run>
         </runtime>
   </extension>
   <extension
         point="org.eclipse.wst.common.project.facet.core.facets">
         <project-facet id="facets"> (0)
     		<constraint>
      			<requires
            	facet="jst.web"
            	soft="true"
            	version="2.2,2.3,2.4"/>
    		</constraint>
      	<constraint>
      		<requires
            	facet="jst.java"
            	soft="true"
            	version="5.0"/>
    	</constraint>
  		</project-facet>
 	</extension>
</plugin>
